<%= simple_form_for bookmark, html: { class: "bookmark form" } do |f| %>
  <% if bookmark.errors.any? %>
    <div class="error-message">
      <%= bookmark.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :url, input_html: { autofocus: true } %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :is_private, as: :boolean %>
  <%= f.input :read_later, as: :boolean %>

  <%= f.submit class: "btn btn--secondary" %>
<% end %>